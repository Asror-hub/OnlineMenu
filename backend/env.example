# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_platform
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# File Upload Configuration (B2 Cloud Storage)
B2_APPLICATION_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_ID=your_b2_bucket_id
B2_BUCKET_NAME=your_b2_bucket_name

# DNS Configuration (Cloudflare)
ENABLE_DNS_AUTOCREATE=true
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
BASE_DOMAIN=yourdomain.com

# App URLs
CLIENT_APP_URL=https://yourdomain.com
ADMIN_APP_URL=https://admin.yourdomain.com
API_BASE_URL=http://localhost:5000/api

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Admin Notifications
ADMIN_EMAIL=admin@yourdomain.com

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,https://yourdomain.com
